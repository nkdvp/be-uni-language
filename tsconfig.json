{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2022",
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "typeRoots" : ["./node_modules/@types"],
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
  },
  "exclude": [
    "node_modules",
    "test",
    "./dist"
  ]
}